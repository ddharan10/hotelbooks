
pipeline {
    agent any

    parameters {
        string(name: 'CUCUMBER_TAGS', defaultValue: '@Map', description: 'Tags to run')
    }

    stages {
        stage('Checkout') {
            steps {

                git branch: 'main',url: 'https://github.com/ddharan10/hotelbook.git'
            }
        }

        stage('Run Cucumber Tests') {
            steps {
                bat "mvn clean test -Dcucumber.filter.tags=${params.CUCUMBER_TAGS}"
            }
        }
    }

   post {
        always {
            junit 'target/cucumber-reports/*.xml'
            cucumber fileIncludePattern: 'target/cucumber-reports/*.json'
        }
    }

}
